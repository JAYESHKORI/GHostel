<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jayesh.ghostel.Activity.AddBlock">


    <Spinner
        android:id="@+id/spn_addB_hostelList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Block Name"
        android:layout_below="@+id/spn_addB_hostelList"
        android:id="@+id/et_addB_bname"/>

    <EditText
        android:id="@+id/et_Bcapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_addB_bname"
        android:layout_margin="20dp"
        android:hint="Capacity"
        android:inputType="number" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Bcapacity"
        android:layout_marginLeft="20dp"
        android:id="@+id/rg_addB_type">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Boys"
            android:checked="true"
            android:id="@+id/rb_addB_boys"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Girls"
            android:id="@+id/rb_addB_girls"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Both"
            android:id="@+id/rb_addB_both"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_addB_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_addB_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="CREATE" />

</RelativeLayout>
